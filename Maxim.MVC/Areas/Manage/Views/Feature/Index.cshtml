@using Maxim.Core.Entities
@model IQueryable<Feature>
@{
    int count = 0;
}
<div class="container"
<h2>Features</h2>
    <a asp-action="Create" asp-controller="Feature" class="btn btn-primary" style="margin-left:100%">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">IconUrl</th>
            <th scope="col">Created At</th>
            <th scope="col">Operators</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.IconUrl</td>
                <td>@item.CreatedAt</td>
                <td>
                <a asp-action="Update" asp-controller="Feature"  class="btn btn-warning" asp-route-id="@item.Id"> Update </a>
                <a asp-action="Delete" asp-controller="Feature"  class="btn btn-danger" asp-route-id="@item.Id"> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>